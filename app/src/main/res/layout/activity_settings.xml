<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Dark Mode Setting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconDarkMode"
                android:contentDescription="im an image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_darkmode" />

            <TextView
                android:id="@+id/textDarkMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Dark Mode"
                android:layout_marginStart="16dp"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/darkModeCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:checked="false"
                android:padding="2dp"
                android:layout_gravity="right" /> <!-- Align to the right -->
        </LinearLayout>

        <!-- Notifications Setting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconNotificationsBell"
                android:contentDescription="im an image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_notifications" />

            <TextView
                android:id="@+id/textNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Notifications"
                android:layout_marginStart="16dp"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/notificationsCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:checked="false"
                android:padding="8dp"
                android:layout_gravity="right" /> <!-- Align to the right -->
        </LinearLayout>

        <!-- Metric Units Setting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconMetricUnits"
                android:contentDescription="im an image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_metricunits" />

            <TextView
                android:id="@+id/textMetricUnits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Metric Units"
                android:layout_marginStart="16dp"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/metricUnitsCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:checked="false"
                android:padding="8dp"
                android:layout_gravity="right" /> <!-- Align to the right -->
        </LinearLayout>

        <!-- Max Distance Setting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconMaxDistance"
                android:contentDescription="im an image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_map" />

            <TextView
                android:id="@+id/textMaxDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Max Distance"
                android:layout_marginStart="16dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/maxDistanceEditText"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint=""
                android:inputType="number"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Add more settings here following the same pattern -->

    </LinearLayout>
</ScrollView>
