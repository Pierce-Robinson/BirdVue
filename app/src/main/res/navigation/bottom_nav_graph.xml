<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/navigation_community">

    <fragment
        android:id="@+id/navigation_community"
        android:name="com.varsitycollege.birdvue.ui.CommunityFragment"
        android:label="fragment_community"
        tools:layout="@layout/fragment_community" >
        <action
            android:id="@+id/action_navigation_community_to_navigation_hotspot"
            app:destination="@id/navigation_hotspot" />
    </fragment>
    <fragment
        android:id="@+id/navigation_hotspot"
        android:name="com.varsitycollege.birdvue.ui.HotspotFragment"
        android:label="fragment_hotspot"
        tools:layout="@layout/fragment_hotspot" >
        <action
            android:id="@+id/action_navigation_hotspot_to_navigation_observations"
            app:destination="@id/navigation_observations" />
    </fragment>
    <fragment
        android:id="@+id/navigation_observations"
        android:name="com.varsitycollege.birdvue.ui.ObservationsFragment"
        android:label="fragment_observations"
        tools:layout="@layout/fragment_observations" >
        <action
            android:id="@+id/action_navigation_observations_to_navigation_settings"
            app:destination="@id/navigation_settings" />
    </fragment>
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.varsitycollege.birdvue.ui.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>